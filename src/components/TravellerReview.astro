<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.querySelector('.testimonial-slider .flex');
    const slides = document.querySelectorAll('.testimonial-slider .flex > div');
    if (!slider) return;
    const slideWidth = (slides[0] as HTMLElement).offsetWidth;
    let currentPosition = 0;

    function moveSlide() {
      currentPosition -= slideWidth;
      if (slider && currentPosition <= -slider.scrollWidth / 2) {
        currentPosition = 0;
      }
      if (slider) {
        (slider as HTMLElement).style.transform = `translateX(${currentPosition}px)`;
      }
    }

    let autoSlideInterval = setInterval(moveSlide, 3000);

    slider.addEventListener('mouseenter', () => {
      clearInterval(autoSlideInterval);
    });

    slider.addEventListener('mouseleave', () => {
      autoSlideInterval = setInterval(moveSlide, 3000);
    });
  });
</script>

