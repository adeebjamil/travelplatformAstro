---
import { Image } from 'astro:assets';
import NavLink from './NavLink.astro';
import Logo from '../assets/logo.png';



---

<nav class="top-0 w-full fixed z-50 bg-white shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-32">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <Image src={Logo} alt="Travel Logo" class="h-10 w-auto pl-10" />
        </a>
      </div>
      <!-- Hamburger Menu for Mobile -->
      <div class="block lg:hidden">
        <button id="menu-btn" class="text-black focus:outline-none">
          <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      <!-- Navigation Links for Desktop -->
      <div class="hidden lg:flex justify-center flex-1">
        <ul class="flex space-x-4">
          <li><NavLink href="/" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300 mr-5">Home</NavLink></li>
          <li><NavLink href="/about" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300 mr-5">About Us</NavLink></li>
          <li><NavLink href="/services" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300 mr-5">Services</NavLink></li>
          <li><NavLink href="/packages" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300 mr-5">Packages</NavLink></li>
          <li><NavLink href="/news" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300 mr-5">News</NavLink></li>
          <li><NavLink href="/contact" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300 mr-5">Contact Us</NavLink></li>
          <li><NavLink href="https://b2b.travelplatformonline.com/" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300 mr-5">B2B Bookings</NavLink></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (hidden by default) -->
  <div id="mobile-menu" class="lg:hidden hidden cursor-pointer">
    <ul class="flex flex-col space-y-4 p-4">
      <li><NavLink href="/" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300">Home</NavLink></li>
      <li><NavLink href="/about" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300">About Us</NavLink></li>
      <li><NavLink href="/services" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300">Services</NavLink></li>
      <li><NavLink href="/packages" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300">Packages</NavLink></li>
      <li><NavLink href="/news" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300">News</NavLink></li>
      <li><NavLink href="/contact" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300">Contact Us</NavLink></li>
      <li><NavLink href="https://b2b.travelplatformonline.com/" class="text-black hover:bg-yellow-400 px-3 py-2 rounded-md text-md font-medium transition duration-300">B2B Bookings</NavLink></li>
    </ul>
  </div>
</nav>

<script>
  // Toggle the mobile menu
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && mobileMenu) { // Check if both elements exist
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
