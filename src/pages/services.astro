---
import Layout from '../layouts/Layout.astro';
import JoinUs from '../components/JoinUs.astro';

const services = [
  {
    title: "B2B Booking Solutions for Travel Agencies and Corporate Entities",
    stars: 5,
    image: "./src/assets/serviceimg/service1.png",
    link: "/service1"
  },
  {
    title: "Visa Change service from Fujairah to Dubai",
    stars: 5,
    image: "./src/assets/serviceimg/service13.png",
    link: "/service2"
  },
  {
    title: "Bus/Flight Updated Availability",
    stars: 5,
    image: "./src/assets/serviceimg/service2.png",
    link: "service3"
  },
  {
    title: "Visa Change by Flight",
    stars: 4,
    image: "./src/assets/serviceimg/service3.png",
    link: "/service4"
  },
  {
    title: "Visa change by Bus",
    stars: 5,
    image: "./src/assets/serviceimg/service4.jpg",
    link: "/service5"
  },
  {
    title: "Global Air Ticketing Platform",
    stars: 5,
    image: "./src/assets/serviceimg/service6.jpg",
    link: "/service6"
  },
  {
    title: "Family visa Assistance",
    stars: 4,
    image: "./src/assets/serviceimg/service7.jpg",
    link: "/service7"
  },
  {
    title: "Golden Visa Assistance",
    stars: 5,
    image: "./src/assets/serviceimg/service8.jpg",
    link: "/service8"
  },
  {
    title: "Passport Renewal Assistance",
    stars: 5,
    image: "./src/assets/serviceimg/service9.jpg",
    link: "/service9"
  },
  {
    title: "UAE Visit Visa Assistance",
    stars: 4,
    image: "./src/assets/serviceimg/service10.jpg",
    link: "/service10"
  },
  {
    title: "Holiday Packages",
    stars: 5,
    image: "./src/assets/serviceimg/service11.jpg",
    link: "/service11"
  },
  {
    title: "Umrah Assistance: 10 days Package By Road",
    stars: 5,
    image: "./src/assets/serviceimg/service12.jpg",
    link: "/service12"
  }
];
---

<Layout>
  
  
     <!-- Hero Section -->
    <!-- Hero Section with Parallax (Keeping this part) -->
  <div
  class="relative h-[60vh] sm:h-[50vh] md:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden"
>
  <div
    class="absolute inset-0 transform-gpu"
    style="transform: translateY(var(--scrollY))"
  >
    <div
      class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"
    >
    </div>
    <img
      class="w-full h-full object-cover opacity-40 scale-110"
      src="/src/assets/about/about1.png"
      alt="Services Hero"
    />
  </div>
  <div class="relative h-full flex items-center justify-center">
    <div class="text-center space-y-6 px-4 sm:px-6 lg:px-8">
      <h1
        class="text-3xl sm:text-5xl md:text-7xl font-black text-white tracking-tight animate-fade-in"
      >
      Our <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
          >Services</span
        >
      </h1>
      <p
        class="text-lg sm:text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto animate-fade-in-up"
      >
      We offer a wide range of services to meet your travel needs
      </p>
    </div>
  </div>
</div>

  <!-- Services Grid -->
  <div class="bg-gray-100 py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
        {services.map(service => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-2">
            <div class="relative h-48">
              <img src={service.image} alt={service.title} class="w-full h-full object-cover" />
              <!-- Star Rating -->
              <div class="absolute top-2 right-2 flex space-x-1 bg-black bg-opacity-50 rounded-full px-2 py-1">
                {Array(service.stars).fill('').map(() => (
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-4">{service.title}</h3>
              <a 
                href={service.link} 
                class="inline-flex items-center text-yellow-600 hover:text-yellow-700 font-medium"
              >
                View Details
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-yellow-500">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row items-center justify-between">
      <div class="text-center md:text-left">
        <h2 class="text-3xl font-extrabold text-white">Ready to start your journey?</h2>
        <p class="mt-3 text-lg text-yellow-100">Contact us today to plan your perfect trip.</p>
      </div>
      <div class="mt-8 md:mt-0">
        <a href="/contact" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-yellow-600 bg-white hover:bg-yellow-50">
          Contact Us
          <svg class="ml-3 -mr-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
      <JoinUs />
    </div>
  </div>
</Layout>