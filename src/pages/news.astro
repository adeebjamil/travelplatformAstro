---
import Layout from '../layouts/Layout.astro';
import JoinUs from '../components/JoinUs.astro';

const newsArticles = [
  {
    title: "New Direct Flights to Popular Tourist Destinations",
    date: "March 15, 2024",
    category: "Travel Updates",
    image: "/src/assets/new/new2.png",
    excerpt: "Exciting new flight routes connecting major cities launching this summer.",
    author: "John Smith",
    readTime: "5 min read"
  },
  {
    title: "Dubai Tourism Hits Record High in 2024",
    date: "March 12, 2024",
    category: "Tourism",
    image: "/src/assets/new/new2.png",
    excerpt: "Tourist numbers exceed expectations in the first quarter of 2024.",
    author: "Sarah Johnson",
    readTime: "4 min read"
  },
  {
    title: "New Visa Regulations for International Travelers",
    date: "March 10, 2024",
    category: "Travel Policy",
    image: "/src/assets/new/new2.png",
    excerpt: "Important updates to visa requirements for multiple destinations.",
    author: "Michael Brown",
    readTime: "6 min read"
  }
];
---

<Layout>
  <!-- Hero Section -->
  <div class="relative bg-gray-900 py-32 -z-50">
    <div class="absolute inset-0">
      <img class="w-full h-full object-cover opacity-40" src="/src/assets/about/about1.png" alt="News Hero" />
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">Latest News</h1>
      <p class="mt-6 text-xl text-gray-300 max-w-3xl mx-auto">Stay updated with the latest travel news and updates</p>
    </div>
  </div>

  <!-- News Grid Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 gap-8">
      {newsArticles.map(article => (
        <div class="bg-white rounded-lg shadow-lg overflow-hidden flex hover:shadow-xl transition-shadow duration-300">
          <img 
            src={article.image} 
            alt={article.title}
            class="w-1/3 object-cover"
          />
          <div class="p-6 flex-1">
            <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">{article.category}</span>
            <h3 class="text-xl font-bold mt-2">{article.title}</h3>
            <p class="text-gray-600 mt-2">{article.excerpt}</p>
            <div class="mt-4 flex items-center justify-between">
              <div class="flex items-center">
                <img 
                  src="/src/assets/testi/testi1.png" 
                  alt={article.author}
                  class="w-8 h-8 rounded-full"
                />
                <span class="ml-2 text-sm text-gray-600">{article.author}</span>
              </div>
              <span class="text-sm text-gray-500">{article.readTime}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <JoinUs />
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>