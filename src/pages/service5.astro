---
import Layout from "../layouts/Layout.astro";
import JoinUs from "../components/JoinUs.astro";
---

<Layout title="Our Services">
  <!-- Hero Section with Parallax (Keeping this part) -->
  <div
    class="relative h-[60vh] sm:h-[50vh] md:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden"
  >
    <div
      class="absolute inset-0 transform-gpu"
      style="transform: translateY(var(--scrollY))"
    >
      <div
        class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"
      >
      </div>
      <img
        class="w-full h-full object-cover opacity-40 scale-110"
        src="/src/assets/about/about1.png"
        alt="Services Hero"
      />
    </div>
    <div class="relative h-full flex items-center justify-center">
      <div class="text-center space-y-6 px-4 sm:px-6 lg:px-8">
        <h1
          class="text-3xl sm:text-5xl md:text-7xl font-black text-white tracking-tight animate-fade-in"
        >
          Transform Your <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
            >Travel Experience</span
          >
        </h1>
        <p
          class="text-lg sm:text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto animate-fade-in-up"
        >
          We offer a wide range of services to meet your travel needs
        </p>
      </div>
    </div>
  </div>

  <!-- New Services Showcase Section -->
  <section class="py-10 sm:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Main Service Feature -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-10 sm:mb-20">
        <div class="grid grid-cols-1 lg:grid-cols-2">
          <div class="p-6 sm:p-12 flex flex-col justify-center">
            <div class="flex items-center gap-6 mb-4 sm:mb-8">
              <img
                src="/src/assets/logo.png"
                alt="B2B Solutions Logo"
                class="hidden sm:block w-15 h-15 sm:w-18 sm:h-18 object-contain"
              />
              <h2 class="text-2xl sm:text-4xl font-bold text-gray-900">
                <span class="text-yellow-500">Visa change</span><br />by Bus
              </h2>
            </div>

            <!-- Feature Image -->
            <div class="mb-4 relative overflow-hidden rounded-lg">
              <div
                class="absolute top-2 right-2 bg-white/80 backdrop-blur-sm rounded-full px-3 py-1"
              >
                <div class="flex items-center gap-1">
                  {
                    [1, 2, 3, 4, 5].map(() => (
                      <svg
                        class="w-4 h-4 text-yellow-400"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))
                  }
                </div>
              </div>
            </div>

            <p class="text-base sm:text-lg text-gray-600 mb-4 sm:mb-8">
              Comprehensive booking solutions tailored for travel agencies and
              corporate entities. Streamline your operations with our advanced
              platform.
            </p>
            <ul class="space-y-2 sm:space-y-4 mb-4 sm:mb-8">
              {
                [
                  "Real-time Availability",
                  "Competitive Pricing",
                  "Instant Confirmations",
                  "24/7 Support",
                ].map((feature) => (
                  <li class="flex items-center text-gray-700">
                    <svg
                      class="w-4 h-4 sm:w-5 sm:h-5 text-green-500 mr-2 sm:mr-3"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    {feature}
                  </li>
                ))
              }
            </ul>
            <a
              href="https://b2b.travelplatformonline.com"
              class="inline-flex items-center justify-center px-6 py-2 sm:px-8 sm:py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition duration-300"
            >
              Get Started
            </a>
          </div>
          <div class="relative">
            <img
              src="./src/assets/serviceimg/service4.jpg"
              alt="B2B Booking Platform"
              class="h-full w-full object-cover"
            />
            <div class="absolute top-4 right-4 flex space-x-2">
              {
                [...Array(5)].map(() => (
                  <svg
                    class="w-6 h-6 text-yellow-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <!-- Service Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-8">
        {
          [
            {
              colors: ["red-500", "blue-500", "green-500"],
              title: "Visa Change by Flight",
              description:
                "Quick and efficient visa change services via flight.",
              color: "blue",
              link: "/service2",
            },
            {
              colors: ["green-500", "blue-500", "red-500"],
              title: "Visa change by Bus",
              description: "Affordable visa change services by bus.",
              color: "green",
              link: "/service3",
            },
            {
              colors: ["blue-500", "red-500", "green-500"],
              title: "Visa Change service from Fujairah",
              description: "Dedicated visa change services from Fujairah.",
              color: "purple",
              link: "/service4",
            },
            {
              colors: ["green-500", "red-500", "blue-500"],
              title: "B2B Booking Solutions for Travel Agencies and Corporate Entities",
              description: "Explore the best deals on flights worldwide.",
              color: "yellow",
              link: "/service1",
            },
            {
              colors: ["red-500", "green-500", "blue-500"],
              title: "Bus/Flight Updated Availability",
              description:
                "Check the latest availability for bus and flight services.",
              color: "yellow",
              link: "/service6",
            },
          ].map((service) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300 relative">
              <img
                src="/src/assets/logo.png"
                alt="Company Logo"
                class="absolute top-4 right-4 w-12 h-12 sm:w-16 sm:h-16 object-contain"
              />

              <div class={`bg-${service.color}-50 p-4 sm:p-6`}>
                <div class="flex space-x-2 mb-2 sm:mb-4">
                  {service.colors.map((color) => (
                    <div class={`w-2 h-2 sm:w-3 sm:h-3 rounded-full bg-${color}`} />
                  ))}
                </div>
                <h3 class="text-lg sm:text-xl font-bold text-gray-900">{service.title}</h3>
                <p class="mt-2 text-gray-600">{service.description}</p>
              </div>
              <div class="px-4 py-2 sm:px-6 sm:py-4 bg-gray-50 flex justify-between items-center">
                <a
                  class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-300"
                  href={service.link}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Learn More
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- B2B Information Section -->
        <!-- New Section with Text in Card Format -->
    <div class="my-10 flex justify-center">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden p-6 sm:p-8 md:p-12 max-w-3xl">
        <h2 class="text-2xl font-bold text-gray-900">Visa change by Bus</h2>
        <p class="mt-4">Bus Operating from Dubai (Deira & Qusais) and Sharjah (Safari Mall) to Hatta Boarder.</p>
        <p class="mt-2">Days of Operation : Sunday to Wednesday.</p>
        <p class="mt-2">Bus package AED 450/- Only</p>
        <p class="mt-2">With 60 Days UAE Visa AED 999/-</p>
        <h3 class="mt-4 text-xl font-semibold">Inclusion :</h3>
        <ul class="list-disc list-inside mt-2 text-gray-600">
          <li>10 Days Oman Visa</li>
          <li>Boarder Fee</li>
          <li>One Night Accommodation</li>
          <li>Transportation</li>
        </ul>
      </div>
    </div>
    

    <JoinUs />
  </section>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes fade-in-up {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 1s ease-out;
    }

    .animate-fade-in-up {
      animation: fade-in-up 1s ease-out;
    }
  </style>

  <script>
    // Parallax effect
    window.addEventListener("scroll", () => {
      document.documentElement.style.setProperty(
        "--scrollY",
        `${window.scrollY * 0.5}px`
      );
    });
  </script>
</Layout>