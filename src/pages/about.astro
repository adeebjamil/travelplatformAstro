---
import { voidElementNames } from "astro/runtime/server/index.js";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Visionmission from "../components/visionmission.astro";
import TravellerReviews from "../components/TravellerReview.astro";
import JoinUs from "../components/JoinUs.astro";
---

<Layout>
  <!-- Hero Section -->
  <div class="relative bg-gray-900 py-32">
    <div class="absolute inset-0">
      <img class="w-full h-full object-cover opacity-40" src="/src/assets/about/about1.png" alt="Contact Hero" />
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">About Us</h1>
      <p class="mt-6 text-xl text-gray-300 max-w-3xl mx-auto">Discover amazing destinations and create unforgettable memories with our expert travel services</p>
    </div>
  </div>

  <Header />
  <Visionmission />
  <TravellerReviews />
  <JoinUs />
</Layout>
